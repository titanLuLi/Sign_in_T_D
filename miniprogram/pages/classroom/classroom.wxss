Page {
  background: #f6f6f6;
}

.subcontainer {
  padding: 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 70px;
  font-size: 40rpx;
}

.row2_1 {
  width: 73%;
}
.row2_2 {
  width: 23%;
}

.resultcontainer {
  padding: 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 20px;
  font-size: 30rpx;
}
.row3_1 {
  width: 32%;
}
.row3_2 {
  width: 32%;
}
.row3_3 {
  width: 32%;
}

.picker {
  border: 3px solid lightgray;
  padding: 10px;
  border-radius: 7%;
}
.userinfo {
  margin-top: 40rpx;
  height: 180rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 170rpx;
  height: 100rpx;
  margin: 5rpx;
  padding-top: 20px;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
  border: 3px solid lightgray;
  text-align: center;
}

.userinfo-avatar:after {
  border: none;
}

button {
  margin-right: 2px;
}